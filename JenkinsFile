pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Decodx09/Tracker.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Lint') {
            steps {
                dir('backend') {
                    sh 'npm run lint'
                }
            }
        }
        stage('Build') {
            steps {
                dir('backend') {
                    sh 'npm run build'
                }
            }
        }
        stage('Package') {
            steps {
                dir('backend') {
                    sh 'tar -czf tracker-backend.tar.gz dist'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Example deployment command (adjust as necessary for your environment)
                sh '''
                scp tracker-backend.tar.gz user@your-server:/path/to/deploy/
                ssh user@your-server "cd /path/to/deploy/ && tar -xzf tracker-backend.tar.gz && pm2 restart tracker"
                '''
            }
        }
        stage('Cleanup') {
            steps {
                echo 'Cleaning up workspace...'
                cleanWs() // Clean the Jenkins workspace
            }
        }
    }
}
