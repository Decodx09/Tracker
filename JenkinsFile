pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                // Clone the repository
                git 'https://github.com/Decodx09/Tracker.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                dir('backend') {
                    // Run tests
                    sh 'npm test'
                }
            }
        }
        stage('Build') {
            steps {
                dir('backend') {
                    // Build your project
                    sh 'npm run build'
                }
            }
        }
    }
}
