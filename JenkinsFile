pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                // Clone the repository
                git 'https://github.com/Decodx09/Tracker.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                // Build your project if necessary
                sh 'npm run build'
            }
        }
    }
}
